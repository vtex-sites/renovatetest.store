{
  "extends": [
    "config:base"
  ],
  "labels": ["automerge", "dependencies-update"],
  "additionalBranchPrefix": "chore/",
  "assignees": ["vtex/faststore", "vtex/store-framework"],
  "packageRules": [
    {
      "matchSourceUrlPrefixes": ["https://github.com/vtex/faststore"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "VTEX Dependencies",
      "automerge": true
    }
  ],
  "schedule": ["after 9am and before 6pm every weekday"],
  "timezone": "America/Sao_Paulo"
}
